# ============================================================================
# CONFIGURACIÓN DE PRODUCCIÓN - RUTA LIBRE WHATSAPP BOT
# ============================================================================
# Copia este archivo como .env y configura los valores reales

# ============================================================================
# BASE DE DATOS
# ============================================================================
# MongoDB connection string
MONGO_DB_URI=mongodb://mongo:27017
MONGO_DB_NAME=db_bot

# ============================================================================
# ADMINISTRACIÓN
# ============================================================================
# Credenciales del panel de administración
ADMIN_EMAIL=admin@rutalibre.com
ADMIN_PASS=secure_password_here
# Teléfono del administrador para notificaciones (formato WhatsApp)
ADMIN_PHONE=549XXXXXXXXX@c.us

# ============================================================================
# SERVIDOR Y URLs
# ============================================================================
# Puerto del servidor
PORT=3000
# URL pública de la aplicación (importante para enlaces de pago)
PUBLIC_URL=https://your-domain.com

# ============================================================================
# MERCADO PAGO
# ============================================================================
# Credenciales de MercadoPago para procesamiento de pagos
MP_PUBLIC_KEY=your_mp_public_key
MP_ACCESS_TOKEN=your_mp_access_token
MP_WEBHOOK_SECRET=your_webhook_secret

# ============================================================================
# GOOGLE MAPS
# ============================================================================
# API Key de Google Maps para geocodificación y mapas
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ============================================================================
# OPENSTREETMAP OAUTH (OPCIONAL)
# ============================================================================
# Para integración con OpenStreetMap (si se usa)
OSM_CLIENT_ID=your_osm_client_id
OSM_CLIENT_SECRET=your_osm_client_secret
OSM_REDIRECT_URI=https://your-domain.com

# ============================================================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ============================================================================
# Nivel de logging (error, warn, info, debug)
LOG_LEVEL=info
# Tiempo máximo de sesión para conductores (en horas)
SESSION_TIMEOUT=24

# ============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# ============================================================================
# Clave secreta para sesiones (generar una segura)
SESSION_SECRET=your_secure_session_secret
# Límites de rate limiting (requests por ventana)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# BACKUP Y MANTENIMIENTO
# ============================================================================
# Configuración de backups automáticos
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7

# ============================================================================
# MONITOREO (OPCIONAL)
# ============================================================================
# Configuración para herramientas de monitoreo
MONITORING_ENABLED=false
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
